@model IEnumerable<AppVendasWeb.Models.Cliente>

@{
    ViewData["Title"] = "Cadastro do Cliente";
}

<h1 class="display-5 text-light">Cadastro de Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-lg btn-outline-light d-inline-flex aling-items-center ">
        <svg bootstrap-icon="Plus" width="30" height="30" aria-label="Adicionar"></svg>Adicionar
    </a>
</p>
<div class="table-responsive">
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClienteNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadastroAtivo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClienteNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CadastroAtivo)
                </td>
                <td class="text-end">
                    <a class="btn btn-outline-warning"asp-action="Edit" asp-route-id="@item.ClienteId">Editar</a> |
                    <a class="btn btn-outline-warning" asp-action="Details" asp-route-id="@item.ClienteId">Detalhes</a> |
                    <a class="btn btn-outline-warning" asp-action="Delete" asp-route-id="@item.ClienteId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>