@model IEnumerable<AppVendasWeb.Models.ItemDaVenda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venda.VendaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    <a class="text-decoration-none link-light btn btn-warning" asp-action="Edit" asp-route-id="@item.ItemDaVendaId">Edit<svg class="mx-2" bootstrap-icon="PencilFill" width="16" height="16" aria-label="Editar"></svg></a> |
                    <a class="text-decoration-none link-light btn btn-warning" asp-action="Details" asp-route-id="@item.ItemDaVendaId">Details<svg class="mx-2" bootstrap-icon="CardList" width="16" height="16" aria-label="Detalhes"></svg></a> |
                    <a class="text-decoration-none link-light btn btn-warning" asp-action="Delete" asp-route-id="@item.ItemDaVendaId">Delete<svg class="mx-2" bootstrap-icon="Trash" width="16" height="16" aria-label="Excluir"></svg></a>
                </td>
            </tr>
        }
    </tbody>
</table>
